{
  "functions": {
    "backend/api/index.py": {
      "runtime": "python3.11",
      "maxDuration": 60,
      "memory": 2048
    }
  },
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build",
        "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "ENVIRONMENT": "prod",
    "VECTOR_STORE_DIR": "/tmp/vectorstore",
    "MLFLOW_TRACKING_URI": "/tmp/mlflow"
  }
}

